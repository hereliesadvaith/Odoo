<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit form views for product page options div. -->
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit.simple.production</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <span class="d-inline-block" >
                    <field name="is_combo" />
                    <label for="is_combo"/>
                </span>
            </div>
        </field>
    </record>
    <!-- Inherit views for product page notebook -->
    <record id="view_template_property_form" model="ir.ui.view">
        <field name="name">product.template.form.inherit.simple.production</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="Combo" attrs="{'invisible': [('is_combo', '=', False)]}">
                    <field name="combo_product_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="pos_categ_id"/>
                            <field name="product_id"/>
                            <field name="is_required"/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>