<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="ComboProductPopup" owl="1">
		<div class="popup product-info-popup" style="max-width: 684px;">
			<main class="body">
				<div>
					<header>
						<h3>
							Combo Products
                            <hr/>
						</h3>
						<div class="section-financials">
							<t t-foreach="props.categories" t-as="category" t-key="category.id">
								<div class="section-title">
									<t t-esc="category.name"/>
								</div>
							</t>
						</div>
					</header>
				</div>
			</main>
            <footer class="footer cash-move">
				<div class="button confirm disable highlight" t-on-click="confirm">
                    Confirm
                </div>
                <div class="button cancel" t-on-click="cancel">
                    Cancel
				</div>
			</footer>
		</div>
	</t>
</templates>