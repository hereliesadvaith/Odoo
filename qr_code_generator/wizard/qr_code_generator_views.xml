<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- QR Code Generator form view -->
        <record id="qr_code_generator_view_form" model="ir.ui.view">
            <field name="name">QR Code Generator</field>
            <field name="model">qr.code.generator</field>
            <field name="arch" type="xml">
                <form string="QR Code Generator">
                    <sheet>
                        <group>
                            <field name="text_box"/>
                            <field name="qr_code" widget="image" attrs="{'invisible':[('qr_code', '=', False)]}"/>
                        </group>
                        <footer>
                            <button name="action_generate" string="Generate" type="object" class="btn-primary"/>
                            <button name="action_download" string="Download" type="object" class="btn-primary"/>
                            <button name="action_reset" string="Reset" type="object" class="btn-primary"/>
                            <button string="Discard" special="cancel" type="object"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>