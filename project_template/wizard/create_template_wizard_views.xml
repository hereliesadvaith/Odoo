<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Create Template wizard form view -->
        <record id="create_template_view_form" model="ir.ui.view">
            <field name="name">Create Template</field>
            <field name="model">create.template</field>
            <field name="arch" type="xml">
                <form string="Create Template">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Name"/>
                            <h1>
                                <field name="name" />
                            </h1>
                        </div>
                    </sheet>
                    <footer>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                        <button string="Discard" special="cancel" type="object"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>