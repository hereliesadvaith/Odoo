<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view for project template page. -->
    <record id="project_template_view_form" model="ir.ui.view">
        <field name="name">project.template.view.form</field>
        <field name="model">project.template</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_project" type="object" string="Create Project"
                        class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="label_tasks"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="task_stage_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <notebook>
                       <page string="Tasks">
                           <field name="task_template_ids">
                               <tree string="Tasks" editable="bottom">
                                   <field name="name"/>
                                   <field name="user_ids" widget="many2many_tags"/>
                                   <field name="tag_ids" widget="many2many_tags"/>
                               </tree>
                           </field>
                       </page>
                   </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!--  Menu action Project Templates  -->
    <record id="project_template_action" model="ir.actions.act_window">
        <field name="name">Project Template</field>
        <field name="res_model">project.template</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>