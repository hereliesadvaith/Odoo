<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form views for task template page. -->
    <record id="task_template_view_form" model="ir.ui.view">
        <field name="name">task.template.view.form</field>
        <field name="model">task.template</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_task" type="object" string="Create Task"
                        class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                        <group>
                            <field name="user_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--  Menu for Task Templates  -->
    <record id="task_template_action" model="ir.actions.act_window">
        <field name="name">Task Template</field>
        <field name="res_model">task.template</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>