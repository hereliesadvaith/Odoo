<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form views for order history page. -->
    <record id="order_history_view_form" model="ir.ui.view">
        <field name="name">order.history.view.form</field>
        <field name="model">order.history</field>
        <field name="arch" type="xml">
            <form>
               <sheet>
                   <group>
                       <group>
                           <field name="sale_id"/>
                           <field name="partner_id"/>
                           <field name="salesperson_id"/>
                           <field name="date"/>
                       </group>
                   </group>
                   <notebook>
                       <page string="Purchase Orders">
                           <field name="purchase_order_ids">
                               <tree string="Purchase Orders" create="0" editable="bottom" delete="0">
                                   <field name="purchase_id" string="Reference"/>
                                   <field name="vendor_id"/>
                               </tree>
                           </field>
                       </page>
                   </notebook>
               </sheet>
            </form>
        </field>
    </record>
    <!--  order history tree view  -->
    <record id="order_history_view_tree" model="ir.ui.view">
        <field name="name">order.history.view.tree</field>
        <field name="model">order.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sale_id" />
                <field name="partner_id"/>
                <field name="salesperson_id"/>
            </tree>
        </field>
    </record>
    <!--  To set order history action -->
    <record id="order_history_action" model="ir.actions.act_window">
        <field name="name">Order History</field>
        <field name="res_model">order.history</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- To add menu in purchase module   -->
    <menuitem id="menu_order_history"
              name="Order History"
              action="order_history_action"
              parent="sale.sale_order_menu"
              sequence="100"
              groups="sales_team.group_sale_manager"
    />
</odoo>