<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <data noupdate="1">
        <!--   To run the function everyday     -->
        <record id="order_history_cron" model="ir.cron">
            <field name="name">Order History Cron Job</field>
            <field name="model_id" ref="model_order_history"/>
            <field name="state">code</field>
            <field name="code">model.cron_order_history()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name='interval_number'>1</field>
            <field name="nextcall" eval="(datetime.today() + timedelta(days=0)).strftime('%Y-%m-%d 23:59:59')"/>
            <field name='interval_type'>days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>