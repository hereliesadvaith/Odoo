<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit views for transfer page -->
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.form.inherit.website.order.tracking</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Track Order">
                    <field name="track_order_ids" nolabel="1" widget="Many2many">
                        <tree editable="bottom" readonly="1">
                            <field name="from_address"/>
                            <field name="to_address"/>
                            <field name="deadline"/>
                            <field name="state"/>
                            <button name="action_change_state" type="object" icon="fa-check" attrs="{'invisible': [('state', '=', 'completed')]}"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>