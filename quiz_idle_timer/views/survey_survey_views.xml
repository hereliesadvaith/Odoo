<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit survey creation page -->
    <record id="survey_survey_view_form" model="ir.ui.view">
        <field name="name">survey.survey.view.form.inherit.quiz.idle.timer</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_survey_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scoring_type']" position="before">
                <field name="idle_time" widget="float_time"/>
                <field name="turn_page_time" widget="float_time"/>
            </xpath>
        </field>
    </record>
</odoo>