<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form views for manufacturing order page. -->
    <record id="simple_production_view_form" model="ir.ui.view">
        <field name="name">simple.production.view.form</field>
        <field name="model">simple.production</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm"
                        class="oe_highlight" states="draft" />
                    <button name="action_done" type="object" string="Mark as Done"
                        class="oe_highlight" states="post" />
                    <button name="action_cancel" type="object" string="Cancel"
                    states="post"/>
                    <field name="state" widget="statusbar"
                    statusbar_visible="draft,post,done"/>
                </header>
               <sheet>
                   <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_stock_moves" class="oe_stat_button"
                            icon="fa-truck" attrs="{'invisible': [('delivery_count', '=', 0)]}">
                            <field name="delivery_count" widget="statinfo" string="Stock Move" />
                        </button>
                   </div>
                   <div class="oe_title">
                       <h1>
                           <field name="name"/>
                       </h1>
                   </div>
                   <group>
                       <field name="product_id"/>
                       <field name="quantity"/>
                   </group>
               <notebook>
                       <page name="Components">
                           <field name="component_ids">
                               <tree editable="bottom">
                                   <field name="product_id"/>
                                   <field name="quantity"/>
                                   <field name="source_location"/>
                               </tree>
                           </field>
                       </page>
                   </notebook>
               </sheet>
            </form>
        </field>
    </record>
    <!--  Simple production tree view  -->
    <record id="simple_production_view_tree" model="ir.ui.view">
        <field name="name">simple.production.view.tree</field>
        <field name="model">simple.production</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="product_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <!--  To set production page action -->
    <record id="simple_production_action" model="ir.actions.act_window">
        <field name="name">Simple Production</field>
        <field name="res_model">simple.production</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- To add menu in inventory module   -->
    <menuitem id="menu_simple_production"
              name="Simple Production"
              action="simple_production_action"
              parent="purchase.menu_procurement_management"
              sequence="8"
    />
</odoo>