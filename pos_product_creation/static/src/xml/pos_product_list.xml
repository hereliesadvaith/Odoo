<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="ProductListScreen" owl="1">
        <div class="partnerlist-screen screen">
			<div class="screen-content">
				<div class="top-content">
					<div class="button new-customer highlight" role="img"
                         t-on-click="createProduct">
                        Create
					</div>
					<div class="button back" t-on-click="discard">
                        Discard
					</div>
                </div>
                <section class="full-content">
					<div class="partner-window">
						<section class="subwindow list">
							<div class="subwindow-container">
								<div class="subwindow-container-fix scrollable-y">
									<table class="partner-list">
                                        <thead>
											<tr>
                                                <th/>
												<th>Name</th>
												<th>Default Code</th>
												<th class="partner-line-category">Category</th>
												<th class="partner-line-price">List Price</th>
												<th class="partner-line-price">Barcode</th>
												<th>Edit</th>
											</tr>
										</thead>
                                        <tbody class="partner-list-contents">
											<t t-foreach="props.products" t-as="product" t-key="product.id">
												<tr t-att-id="product.id">
													<td>
														<div class="product-img">
															<img t-att-src="product.image_url" class="product_img" t-att-alt="product.display_name"/>
														</div>
													</td>
                                                    <td t-esc="product.display_name or ''"/>
													<td t-esc="product.default_code or ''"/>
													<td t-esc="product.pos_categ_id[1] or ''"/>
													<td t-esc="product.lst_price or ''"/>
													<td t-esc="product.barcode or ''"/>
													<td>
														<div>
															<button class="edit_product" t-on-click="editProduct" t-att-data-product-id="product.id">
																<i class="fa fa-pencil" aria-hidden="true" t-att-data-product-id="product.id"/>
															</button>
														</div>
													</td>
                                                </tr>
											</t>
										</tbody>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </div>
        </div>
    </t>
</templates>