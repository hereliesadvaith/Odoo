<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inventory report wizard form view -->
        <record id="inventory_report_wizard_view_form" model="ir.ui.view">
            <field name="name">Stock Move Report</field>
            <field name="model">inventory.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Inventory">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_ids" widget="many2many_tags"/>
                                <field name="picking_type_ids" widget="many2many_tags"/>
                                <field name="state"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <footer>
                            <button name="print" string="PDF" context="{'button': 'pdf'}" type="object" class="btn-primary"/>
                            <button name="print" context="{'button': 'xlsx'}" string="XLSX" type="object" class="btn-primary"/>
                            <button string="Discard" special="cancel" type="object"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Action for inventory report wizard -->
        <record id="inventory_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Stock Move Report</field>
            <field name="res_model">inventory.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>