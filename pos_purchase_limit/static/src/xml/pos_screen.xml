<?xml version="1.0" encoding="UTF-8" ?>
<!--To add the purchase limit  -->
<templates xml:space="preserve">
    <!--To add the purchase limit in partner details-->
    <t t-name="PartnerDetailsEdit" t-inherit="point_of_sale.PartnerDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('partner-details-right')]" position="inside">
            <div class="partner-detail" t-if="props.partner.enable_purchase_limit">
                <span class="label">Limit</span>
                <input class="detail balance_due" name="vat" t-on-change="captureChange"
                       t-att-value="props.partner.purchase_limit_value"/>
            </div>
        </xpath>
    </t>
</templates>