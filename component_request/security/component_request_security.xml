<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- To create module category. -->
    <record model="ir.module.category" id="module_category_component_request">
        <field name="name">Component Request</field>
        <field name="description">Category For Component Request</field>
        <field name="sequence">45</field>
    </record>
    <!-- To create requisition user security group. -->
    <record id="component_request_user_access" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_component_request"/>
    </record>
    <!-- To create requisition department manager security group. -->
    <record id="component_request_manager_access" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_component_request"/>
        <field name="implied_ids" eval="[(4, ref('component_request_user_access'))]"/>
    </record>
    <!-- To create requisition department head security group. -->
    <record id="component_request_head_access" model="res.groups">
        <field name="name">Department Head</field>
        <field name="category_id" ref="module_category_component_request"/>
        <field name="implied_ids" eval="[(4, ref('component_request_manager_access'))]"/>
    </record>
</odoo>
