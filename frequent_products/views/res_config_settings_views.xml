<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--  To inherit configuration page view  -->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='catalog_setting_container']" position="after">
                <h2>Frequent Products</h2>
                <div class="row mt16 o_settings_container" id="pricing_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="no_of_months" string="No of Months"/>
                            <div class="text-muted">
                                To select the no of months per customer.
                            </div>
                            <br/>
                            <div class="content-group">
                                <field name="no_of_months"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="select_limit" string="Select Limit"/>
                            <div class="text-muted">
                                To select the limit of frequent products shown per customer.
                            </div>
                            <br/>
                            <div class="content-group">
                                <field name="select_limit"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>