<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit sale order page -->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.associated.products</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="associated_products"/>
            </xpath>
            <xpath expr="//page[@name='other_information']" position="before" >
                <page string="Frequenct Products">
                    <field name="frequent_product_ids">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="sale_orders"/>
                            <field name="last_sale_date"/>
                            <field name="last_invoiced_amount"/>
                            <button name="action_add_product" type="object" icon="fa-truck"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
