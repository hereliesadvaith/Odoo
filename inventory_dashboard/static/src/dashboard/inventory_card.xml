<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <div t-name="inventory_dashboard.InventoryCard" owl="1">
        <div class="py-3 text-odoo text-center">
            <h1>Inventory Dashboard</h1>
        </div>
        <div>
        <div class="mask d-flex align-items-center h-100">
        <div class="container">
        <div class="row justify-content-center">
            <div class="col-4">
            <div class="table-responsive bg-white">
            <h2 style="padding:10px; color: #71639e">Incoming Stock</h2>
                <table class="table mb-0">
                    <thead>
                    <tr>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Handle</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td><t t-esc="props.incoming_stock"/></td>
                    </tr>
                    </tbody>
                </table>
            </div>
            </div>
            <div class="col-4">
            <div class="table-responsive bg-white">
            <h2 style="padding: 10px; color: #71639e;">Outgoing Stock</h2>
                <table class="table mb-0">
                    <thead>
                    <tr>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Handle</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>@mdo</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            </div>
        </div>
        </div>
        </div>
        </div>
    </div>
</templates>