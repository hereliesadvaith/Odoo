<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  To do search views -->
    <record id='todo_task_view_search' model='ir.ui.view'>
    <field name="name">todo.task.model.search</field>
    <field name="model">todo.task</field>
    <field name="arch" type="xml">
        <search string="Activity">
        <!--filter views-->
            <filter string="My Activities"
                    name="assigned_to_me"
                    domain="[('user_id', '=', uid)]"/>
            <filter invisible="0" string="Late Activities"
                    name="due_activities"
                    domain="[('due_date', '&lt;', context_today().strftime('%Y-%m-%d'))]"
                    help="Show all records which has next action date is before today"/>
            <filter invisible="0" string="Today Activities"
                    name="today_activities"
                    domain="[('due_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
            <filter invisible="0" string="Future Activities"
                    name="future_activities"
                    domain="[('due_date', '&gt;', context_today().strftime('%Y-%m-%d'))
                ]"/>
        </search>
    </field>
    </record>
    <!-- To do Kanban view -->
    <record id="todo_task_view_kanban" model="ir.ui.view">
        <field name="name">todo.task.view.kanban</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage" class="oe_notes oe_kanban_quickcreate_textarea o_kanban_small_column">
                <field name="summary"/>
                <field name="activity_type_id"/>
                <field name="priority" />
                <field name="stage" />
                <field name="user_id" />
                <field name="activity_ids" />
                <field name="activity_state" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn"
                                role="button" data-toggle="dropdown"
                                data-display="static" href="#"
                                aria-label="Dropdown menu"
                                title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable">
                                        <a role="menuitem" type="edit"
                                        class="dropdown-item">Edit
                                        </a>
                                    </t>
                                    <t t-if="widget.deletable">
                                        <a role="menuitem" type="delete"
                                        class="dropdown-item">Delete
                                        </a>
                                    </t>
                                </div>
                            </div>
                            <div>
                                <strong class="o_kanban_record_title"><span><field name="summary"/></span></strong>
                            </div>
                            <div>
                                <field name="activity_type_id"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="priority"
                                        widget="priority"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="user_id"
                                           widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!-- To do Form view -->
     <record id="todo_task_view_form" model="ir.ui.view">
        <field name="name">todo.task.view.form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form class="o_note_form_view">
                <field name="res_model" invisible="1" /> 
                <header>
                    <field name="stage"
                           widget="statusbar"
                           options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group style="padding-top: 20px;">
                        <group>
                            <field name="priority" widget="priority" />
                            <field name="activity_type_id" />
                            
                        </group>
                        <group>
                            <field name="summary" /> 
                            <field name="due_date" />
                        </group>
                    </group>
                    <field name="description" type="html" class="oe_memo" default_focus="1" options="{'resizable': false, 'collaborative': true}" style="padding-top: 20px;"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <!-- To do tree view -->
    <record id="todo_task_view_tree" model="ir.ui.view">
        <field name="name">todo.task.view.tree</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree
                  decoration-danger="due_date &lt; current_date"
                  decoration-success="due_date == current_date"
                  default_order="due_date">
                <field name="priority" widget="priority" class="mr-3"/>
                <field name="summary"/>
                <field name="activity_type_id"/>
                <field name="due_date"/>
                <field name="res_model" optional="hide"/>
                <field name="stage"
                       decoration-success="stage == 'planned' or stage == 'done'"
                       decoration-info="stage == 'today' " widget="badge"
                       optional="show"/>
            </tree>
        </field>
    </record>
    <!-- Action for to do task page -->
    <record id="todo_task_action" model="ir.actions.act_window">
        <field name="name">To-Do List</field>
        <field name="res_model">todo.task</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="context">{"search_default_assigned_to_me":1}</field>
    </record>
</odoo>
