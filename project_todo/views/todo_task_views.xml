<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- To do Kanban view -->
    <record id="todo_task_view_kanban" model="ir.ui.view">
        <field name="name">todo.task.view.kanban</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="tag_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div>
                                <strong class="o_kanban_record_title"><span><field name="name"/></span></strong>
                            </div>
                            <div>
                                <span class="o_kanban_record_subtitle">Hi there</span>
                            </div>
                            <div>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!-- Action for to do task page -->
    <record id="todo_task_action" model="ir.actions.act_window">
        <field name="name">To-Do List</field>
        <field name="res_model">todo.task</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>
