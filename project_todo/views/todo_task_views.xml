<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- To do Kanban view -->
    <record id="todo_task_view_kanban" model="ir.ui.view">
        <field name="name">todo.task.view.kanban</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="tag_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                            <div>
                                <strong class="o_kanban_record_title"><span><field name="name"/></span></strong>
                            </div>
                            <div>
                                <span class="o_kanban_record_subtitle">Hi there</span>
                            </div>
                            <div>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!-- To do Form view -->
     <record id="todo_task_view_form" model="ir.ui.view">
        <field name="name">todo.task.view.form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <field name="name" invisible="1"/>
                <header>
                    <div class="py-1 px-2 border rounded bg-view">
                        <field name="tag_ids"
                               widget="many2many_tags"
                               options="{'color_field': 'color', 'no_create_edit': True}"
                               class="me-2"
                               placeholder="Tags"/>
                    </div>
                    <field name="state"
                           widget="statusbar"
                           options="{'clickable': '1'}"/>
                </header>
                <sheet class="o_todo_form_sheet_bg">
                    <field name="description" type="html" class="oe_memo" default_focus="1" options="{'resizable': false, 'collaborative': true}"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <!-- Action for to do task page -->
    <record id="todo_task_action" model="ir.actions.act_window">
        <field name="name">To-Do List</field>
        <field name="res_model">todo.task</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>
