<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Todo tag tree view -->
    <record id="todo_tag_view_tree" model="ir.ui.view">
        <field name="name">todo.tag.view.tree</field>
        <field name="model">todo.tag</field>
        <field name="arch" type="xml">
          <tree string="Tags" editable="bottom">
              <field name="name"/>
              <field name="color" widget="color_picker"/>
          </tree>
        </field>
    </record>
    <!-- Action for to do tag page -->
    <record id="todo_tag_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">todo.tag</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>