<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Todo stage tree view -->
    <record id="todo_stage_view_tree" model="ir.ui.view">
        <field name="name">todo.stage.view.tree</field>
        <field name="model">todo.stage</field>
        <field name="arch" type="xml">
          <tree string="Stages" editable="bottom">
              <field name="sequence" widget="handle"/>
              <field name="name"/>
              <field name="fold"/>
          </tree>
        </field>
    </record>
    <!-- Action for to do stage page -->
    <record id="todo_stage_action" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">todo.stage</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>