<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    To inherit configuration page view-->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_due_limit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos-loyalty']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="pos_set_due_limit"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_set_due_limit" />
                        <div class="text-muted">
                            Set a limit for customer's due.
                        </div>
                        <div class="content-group mt16" attrs="{'invisible': [('pos_set_due_limit', '=', False)]}">
                            <label for="pos_due_limit_value" string="Limit" class="fw-normal"/>
                            <field name="pos_due_limit_value"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
