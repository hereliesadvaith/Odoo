<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Quality assuarance group -->
        <record model="ir.module.category" id="module_category_quality_assurance">
            <field name="name">Quality</field>
            <field name="description">Quality assurance category</field>
            <field name="sequence">10</field>
        </record>
        <!-- Quality assurance user group -->
        <record id="group_quality_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_quality_assurance"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <!-- Quality assurance manager group -->
        <record id="group_quality_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_quality_assurance"/>
            <field name="implied_ids" eval="[(4, ref('group_quality_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <!-- Quality test user rule -->
        <record id="quality_test_user_rule" model="ir.rule">
            <field name="name">Quality Test User Rule</field>
            <field name="model_id" ref="model_quality_test"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_quality_user'))]"/>
        </record>
        <!-- Quality test manager rule (overrides the implied user rule)-->
        <record id="quality_test_manager_rule" model="ir.rule">
            <field name="name">Quality Test Manager Rule</field>
            <field name="model_id" ref="model_quality_test"/>
            <field name="groups" eval="[(4, ref('group_quality_manager'))]"/>
        </record>
    </data>
</odoo>