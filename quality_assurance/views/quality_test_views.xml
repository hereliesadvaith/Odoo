<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view for quality test page. -->
    <record id="quality_test_view_form" model="ir.ui.view">
        <field name="name">quality.test.view.form</field>
        <field name="model">quality.test</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="test_type" />
                            <field name="quality_measure_id" />
                            <field name="quality_alert_id" />
                            <field name="quantitative_result"
                                attrs="{'invisible':[('test_type', '=', 'quality')]}" />
                            <field name="qualitative_result"
                                attrs="{'invisible':[('test_type', '=', 'quantity')]}" />
                        </group>
                        <group>
                            <field name="product_id" />
                            <field name="user_id" />
                            <field name="status" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <!-- Tree view for quality test page -->
    <record id="quality_test_view_tree" model="ir.ui.view">
        <field name="name">quality.test.view.tree</field>
        <field name="model">quality.test</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="product_id" />
                <field name="user_id" />
                <field name="status" />
            </tree>
        </field>
    </record>
    <!-- Action for quality test page -->
    <record id="quality_test_action" model="ir.actions.act_window">
        <field name="name">Quality Test</field>
        <field name="res_model">quality.test</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>