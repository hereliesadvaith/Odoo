<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view for quality alert page. -->
    <record id="quality_alert_view_form" model="ir.ui.view">
        <field name="name">quality.alert.view.form</field>
        <field name="model">quality.alert</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_test" type="object" string="Generate Test"
                        class="oe_highlight"
                        attrs="{'invisible': [('is_test_generated', '=', True)]}" />
                    <field name="state" widget="statusbar"
                        statusbar_visible="ongoing,pass" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_id" />
                            <field name="user_id" />
                            <field name="is_test_generated" invisible="1" />
                        </group>
                        <group>
                            <field name="date" />
                            <field name="stock_picking_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Tests">
                            <field name="quality_test_ids">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="user_id" />
                                    <field name="test_type" invisible="1" />
                                    <field name="qualitative_result"
                                        attrs="{'readonly': [('test_type', '=', 'quantity')]}" />
                                    <field name="quantitative_result"
                                        attrs="{'readonly': [('test_type', '=', 'quality')]}" />
                                    <field name="status" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <!-- Tree view for quality alert page -->
    <record id="quality_alert_view_tree" model="ir.ui.view">
        <field name="name">quality.alert.view.tree</field>
        <field name="model">quality.alert</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="product_id" />
                <field name="user_id" />
                <field name="date" />
                <field name="stock_picking_id" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <!-- Action for quality alert page -->
    <record id="quality_alert_action" model="ir.actions.act_window">
        <field name="name">Quality Alert</field>
        <field name="res_model">quality.alert</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>