<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  Template for sale report  -->
    <template id="pdf_sale_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h1 class="text-center">Sales Report</h1>
                    <br />
                    <div>
                        <t t-if="sale_team">
                            <h5>Sale Team: <t t-esc="sale_team"/></h5>
                        </t>
                        <h6>From: <t t-esc="start_date" /></h6>
                        <h6>To: <t t-esc="end_date" /></h6>
                    </div>
                    <br />
                    <table class="table table-bordered mt32">
                        <thead>
                            <tr>
                                <th name="th_reference" class="text-left">
                                    <span>Reference</span>
                                </th>
                                <th name="th_customer" class="text-left">
                                    <span>Customer</span>
                                </th>
                                <th name="th_amount" class="text-left">
                                    <span>Amount</span>
                                </th>
                                <th name="th_date" class="text-left">
                                    <span>Date</span>
                                </th>
                                <th name="th_status" class="text-left">
                                    <span>Status</span>
                                </th>
                            </tr>
                        </thead>
                        <t t-foreach="sale_orders" t-as="line">
                            <tr>
                                <td>
                                    <t t-esc="line['reference']" />
                                </td>
                                <td>
                                    <t t-esc="line['customer']" />
                                </td>
                                <td>
                                    <t t-esc="line['amount']" />
                                </td>
                                <td>
                                    <t t-esc="line['date']" />
                                </td>
                                <td>
                                    <t t-esc="line['status']" />
                                </td>
                            </tr>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>