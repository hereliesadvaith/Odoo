<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <data noupdate="1">
        <!--   To run the function every week   -->
        <record id="cron_weekly_sale_report" model="ir.cron">
            <field name="name">Sale Report Weekly</field>
            <field name="model_id" ref="model_monthly_sale_report" />
            <field name="state">code</field>
            <field name="code">model.cron_weekly_sale_report()</field>
            <field name="user_id" ref="base.user_root" />
            <field name='interval_number'>1</field>
            <field name='interval_type'>weeks</field>
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>