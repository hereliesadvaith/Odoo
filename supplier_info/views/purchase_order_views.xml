<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit views for purchase order page -->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.supplier.info</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_check_price" states="draft" string="Check Best Price" type="object"/>
            </header>
            <notebook position="inside">
                <page string="Supplier Info">
                    <field name="supplier_ids" nolabel="1" widget="Many2many">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="vendor_id"/>
                            <field name="product_qty"/>
                            <field name="price"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
