<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Compare price form view -->
        <record id="compare_price_view_form" model="ir.ui.view">
            <field name="name">Compare Price</field>
            <field name="model">compare.price</field>
            <field name="arch" type="xml">
                <form string="Compare Prices">
                    <sheet>
                        <field name="supplier_ids" nolabel="1" widget="Many2many">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="vendor_id"/>
                                <field name="product_qty"/>
                                <field name="price"/>
                                <field name="is_best_price" invisible="1"/>
                                <button name="action_create_po" type="object" string="Create PO" attrs="{'invisible': [('is_best_price', '=', False)]}"/>
                            </tree>
                        </field>
                    </sheet>
                    <footer/>
                </form>
            </field>
        </record>
    </data>
</odoo>