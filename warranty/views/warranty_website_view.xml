<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- To create a warranty request form in the website. -->
    <template id="warranty_request">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty warranty_form">
                <section class="s_website_form" data-vcss="001" data-snippet="s_website_form">
                    <div class="container">
                        <h1 style="padding: 20px;">Warranty Request Form</h1>
                        <form action="/create/warranty_request" method="post" enctype="multipart/form-data" class="o_mark_required" data-mark="*" data-model_name="" data-success-page="">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="char" data-name="Field" style="padding: 20px;">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="studio1">
                                            <span class="s_website_form_label_content">Name</span>
                                            <span class="s_website_form_mark"> *</span>
                                        </label>
                                        <div class="col-sm">
                                        <input id="customer_id" t-att-value="customer_id.name" type="text" class="form-control s_website_form_input" name="customer_id" required="1" readonly="1"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="char" data-name="Field" style="padding: 20px;">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="studio1">
                                            <span class="s_website_form_label_content">Invoice</span>
                                            <span class="s_website_form_mark"> *</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="invoice_id" t-attf-class="form-control s_website_form_input" required="1" id="invoice_id">
                                                <option value=""/>
                                                <t t-foreach="invoices" t-as="invoice">
                                                    <option t-esc="invoice.name" t-att-value="invoice.id"/>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="char" data-name="Field" style="padding: 20px;">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="studio1">
                                            <span class="s_website_form_label_content">Product</span>
                                            <span class="s_website_form_mark"> *</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="product_id" t-attf-class="form-control s_website_form_input" required="1" id="product_id">
                                                <option value=""/>
                                                <t t-foreach="products" t-as="product">
                                                    <option t-esc="product.name" t-att-value="product.id"/>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="char" data-name="Field" style="padding: 20px;">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="studio1">
                                            <span class="s_website_form_label_content">Lot Number</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="lot_number_id" t-attf-class="form-control s_website_form_input" id="lot_number_id">
                                                <option value=""/>
                                                <t t-foreach="lot_numbers" t-as="lot_number">
                                                    <option t-esc="lot_number.name" t-att-value="lot_number.id"/>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_submit" data-name="Submit Button" style="padding: 20px;">
                                    <div style="width: 200px;" class="s_website_form_label"/>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </t>
    </template>
    <!-- To create a thanks page after submitting warranty request. -->
    <record id="customer_thanks" model="website.page">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/customer-thank-you</field>
        <field name="website_published">True</field>
        <field name="key">warranty.customer_thanks</field>
        <field name="arch" type="xml">
            <t name="Thanks" t-name="warranty.customer_thanks">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="container">
                            <h1>Thanks!</h1>
                            <div class="row">
                                <div class="alert alert-success" role="status">
                                    Your request for warranty has been created.
                                </div>
                                <p>
                                    We will get back to you shortly.
                                </p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>
    <!--  To create new menu in portal documents  -->
    <template id="portal_my_home" name="Warranty" customize_show="True"
         inherit_id="portal.portal_my_home" priority="90">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
           <a href="/my/warranties"
              class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
              title="Warranties">
               Warranties
               <span class="badge text-bg-secondary rounded-pill"
                     data-oe-model="ir.ui.view" data-oe-id="405"
                     data-oe-field="arch"
                     data-oe-xpath="/t[1]/a[1]/t[3]/span[1]"
                     data-placeholder_count="warranties_count">
               </span>
           </a>
        </xpath>
    </template>
    <!-- To create list of warranties page   -->
    <template id="portal_my_warranties">
        <t t-call="portal.portal_layout">
            <t t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th><span class='d-none d-md-inline'>Reference</span></th>
                        <th><span class='d-none d-md-inline'>Invoice No</span></th>
                        <th><span class='d-none d-md-inline'>Product</span></th>
                        <th><span class='d-none d-md-inline'>Purchase Date</span></th>
                        <th>
                            <button class="btn btn-primary float-left" onclick="window.location.href='/warranty_request'">New</button>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="warranties" t-as="warranty">
                        <tr>
                            <td>
                                <a t-attf-href="/my/warranties/#{warranty.id}">
                                    <t t-esc="warranty.name"/>
                                </a>
                            </td>
                            <td><t t-esc="warranty.invoice_id.name"/></td>
                            <td><t t-esc="warranty.product_id.name"/></td>
                            <td><t t-esc="warranty.purchase_date"/></td>
                        </tr>
                    </t>
                </tbody>
            </t>
        </t>
    </template>
    <!--  To create breadcrumbs of warranty page  -->
    <template id="portal_breadcrumbs" inherit_id="portal.portal_breadcrumbs">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'warranties'" class="breadcrumb-item">Warranties</li>
            <li t-if="page_name == 'warranty'" class="breadcrumb-item">
                <a href="/my/warranties">Warranties</a>
            </li>
        </xpath>
    </template>
    <!-- To create form view for each warranties -->
    <template id="portal_sidebar" inherit_id="portal.portal_sidebar">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-if="page_name == 'warranty'" class="row mt16">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Reference</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0" t-esc="warranty['name']"/>
                                    </div>
                                </div>
                                <hr/>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Customer</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0" t-esc="warranty['customer_id'][1]"/>
                                    </div>
                                </div>
                                <hr/>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Invoice</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0" t-esc="warranty['invoice_id'][1]"/>
                                    </div>
                                </div>
                                <hr/>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Product</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0" t-esc="warranty['product_id'][1]"/>
                                    </div>
                                </div>
                                <hr/>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Lot Number</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <t t-if="warranty['lot_number_id']">
                                            <p class="text-muted mb-0" t-esc="warranty['lot_number_id'][1]"/>
                                        </t>
                                        <t t-else="">
                                            <p class="text-muted mb-0"/>
                                        </t>
                                    </div>
                                </div>
                                <hr/>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Warranty Type</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0" t-esc="warranty['warranty_type']"/>
                                    </div>
                                </div>
                                <hr/>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Request Date</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0" t-esc="warranty['request_date']"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
