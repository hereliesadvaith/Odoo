<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit form views for product page options div. -->
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit.warranty</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <span class="d-inline-block">
                    <field name="has_warranty"/>
                    <label for="has_warranty"/>
                </span>
            </div>
        </field>
    </record>
    <!-- Inherit views for product page notebook -->
    <record id="view_template_property_form" model="ir.ui.view">
        <field name="name">product.template.form.inherit.warranty</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="Warranty" attrs="{'invisible': [('has_warranty', '=', False)]}">
                    <group>
                        <field name="warranty_type" label="Warranty Type"/>
                        <field name="warranty_period" label="Warranty Period"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>