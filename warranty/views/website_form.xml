<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- To create a menu in the website. -->
    <record id="menu_warranty_form" model="website.menu">
        <field name="name">Warranty</field>
        <field name="url">/warranty_request</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence">45</field>
    </record>
    <!-- To create a warranty request form in the website. -->
    <template id="warranty_request">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_website_form" data-vcss="001" data-snippet="s_website_form">
                    <div class="container">
                        <form action="/create/warranty_request" method="post" enctype="multipart/form-data" class="o_mark_required" data-mark="*" data-model_name="" data-success-page="">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="char" data-name="Field" style="padding: 20px;">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="studio1">
                                            <span class="s_website_form_label_content">Name</span>
                                            <span class="s_website_form_mark"> *</span>
                                        </label>
                                        <div class="col-sm">
                                        <input id="customer_id" t-att-value="customer_id.name" type="text" class="form-control s_website_form_input" name="customer_id" required="1" readonly="1"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="char" data-name="Field" style="padding: 20px;">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="studio1">
                                            <span class="s_website_form_label_content">Invoice</span>
                                            <span class="s_website_form_mark"> *</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="invoice_id" t-attf-class="form-control s_website_form_input" required="1">
                                                <option value=""/>
                                                <t t-foreach="invoices" t-as="invoice">
                                                    <option t-esc="invoice.name" t-att-value="invoice.id"/>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="char" data-name="Field" style="padding: 20px;">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="studio1">
                                            <span class="s_website_form_label_content">Product</span>
                                            <span class="s_website_form_mark"> *</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="product_id" t-attf-class="form-control s_website_form_input" required="1">
                                                <option value=""/>
                                                <t t-foreach="products" t-as="product">
                                                    <option t-esc="product.name" t-att-value="product.id"/>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="char" data-name="Field" style="padding: 20px;">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="studio1">
                                            <span class="s_website_form_label_content">Lot Number</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="lot_number_id" t-attf-class="form-control s_website_form_input">
                                                <option value=""/>
                                                <t t-foreach="lot_numbers" t-as="lot_number">
                                                    <option t-esc="lot_number.name" t-att-value="lot_number.id"/>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_submit" data-name="Submit Button" style="padding: 20px;">
                                    <div style="width: 200px;" class="s_website_form_label"/>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </t>
    </template>
    <!-- To create a thanks page after submitting warranty request. -->
    <record id="customer_thanks" model="website.page">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/customer-thank-you</field>
        <field name="website_published">True</field>
        <field name="key">warranty.customer_thanks</field>
        <field name="arch" type="xml">
            <t name="Thanks" t-name="warranty.customer_thanks">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="container">
                            <h1>Thanks!</h1>
                            <div class="row">
                                <div class="alert alert-success" role="status">
                                    Your request for warranty has been created.
                                </div>
                                <p>
                                    We will get back to you shortly.
                                </p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>