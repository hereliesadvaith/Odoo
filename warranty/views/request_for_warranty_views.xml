<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form views for requests for warranty page. -->
    <record id="request_for_warranty_view_form" model="ir.ui.view">
        <field name="name">request.for.warranty.view.form</field>
        <field name="model">request.for.warranty</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" states="draft"/>
                    <button name="action_approve" type="object" string="Approve" class="oe_highlight" states="to_approve" groups="warranty.warranty_manager_access"/>
                    <button name="action_return" type="object" class="oe_highlight" string="Return Product" states="received"/>
                    <button name="action_cancel" type="object" string="Cancel" states="to_approve,approved" groups="warranty.warranty_manager_access"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_delivery" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('delivery_count', '=', 0)]}">
                            <field name="delivery_count" widget="statinfo" string="Delivery"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="invoice_id" options="{'no_create': True, 'no_create_edit':True}" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                            <field name="product_id" options="{'no_create': True, 'no_create_edit':True}" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                            <field name="lot_number_id" options="{'no_create': True, 'no_create_edit':True}" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                            <field name="request_date" attrs="{'readonly':[('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="customer_id"/>
                            <field name="purchase_date"/>
                            <field name="warranty_type"/>
                            <field name="warranty_period"/>
                            <field name="warranty_expire_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree views for requests for warranty page. -->
    <record id="request_for_warranty_view_tree" model="ir.ui.view">
        <field name="name">request.for.warranty.view.tree</field>
        <field name="model">request.for.warranty</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="product_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <!-- Action for request for warranty page -->
    <record id="request_for_warranty_action" model="ir.actions.act_window">
        <field name="name">Request for Warranties</field>
        <field name="res_model">request.for.warranty</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>