<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  Template for product warranty  -->
    <template id="report_warranty" >
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h1>Product Warranty Report</h1>
                    <br/>
                    <table class="table table-bordered mt32">
                        <thead>
                            <tr>
                                <th name="th_reference" class="text-left">
                                    <span>Reference</span>
                                </th>
                                <th name="th_partner" class="text-left">
                                    <span>Customer</span>
                                </th>
                                <th name="th_product" class="text-left">
                                    <span>Product</span>
                                </th>
                                <th name="th_product" class="text-left">
                                    <span>State</span>
                                </th>
                                <th name="th_product" class="text-left">
                                    <span>Request Date</span>
                                </th>
                            </tr>
                        </thead>
                        <t t-foreach="warranties" t-as="line">
                            <tr>
                                <td>
                                    <t t-esc="line['warranty']"/>
                                </td>
                                <td>
                                    <t t-esc="line['partner']"/>
                                </td>
                                <td>
                                    <t t-esc="line['product']['en_US']"/>
                                </td>
                                <td>
                                    <t t-esc="line['state']"/>
                                </td>
                                <td>
                                    <t t-esc="line['request_date']"/>
                                </td>
                            </tr>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>