<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  Report for product warranty in requests page  -->
    <record id="request_for_warranty_report" model="ir.actions.report">
        <field name="name">Product Warranty</field>
        <field name="model">request.for.warranty</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">warranty.report_warranty</field>
        <field name="report_file">warranty.report_warranty</field>
        <field name="binding_model_id" ref="model_request_for_warranty"/>
        <field name="binding_type">report</field>
    </record>
    <!--  wizard report action  -->
    <record id="warranty_report_action" model="ir.actions.report">
        <field name="name">Product Warranty</field>
        <field name="model">warranty.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">warranty.report_warranty</field>
        <field name="report_file">warranty.report_warranty</field>
        <field name="binding_model_id" ref="model_warranty_report_wizard"/>
        <field name="binding_type">report</field>
    </record>
</odoo>